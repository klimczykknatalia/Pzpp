@model Pzpp.Data.Entities.Contact

@{
    ViewData["Title"] = "Usuń kontakt";
}

<h1>@ViewData["Title"]</h1>
<h3>Czy na pewno chcesz usunąć ten kontakt?</h3>
<dl class="row">
    <dt class="col-sm-2">Imię</dt><dd class="col-sm-10">@Model.FirstName</dd>
    <dt class="col-sm-2">Nazwisko</dt><dd class="col-sm-10">@Model.LastName</dd>
    <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Telefon</dt><dd class="col-sm-10">@Model.PhoneNumber</dd>
</dl>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>