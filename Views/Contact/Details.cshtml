@model Pzpp.Data.Entities.Contact
@{
ViewData["Title"] = "Szczegóły kontaktu";
}

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i> @ViewData["Title"]</h5>
    </div>

    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4">Imię</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>

            <dt class="col-sm-4">Nazwisko</dt>
            <dd class="col-sm-8">@Model.LastName</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Telefon</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Ulubiony Tymbark</dt>
            <dd class="col-sm-8">@Model.FavoriteTymbark</dd>
        </dl>
    </div>

    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
            <i class="bi bi-pencil"></i> Edytuj
        </a>
        <a asp-action="Index" class="btn btn-secondary">Powrót</a>
    </div>
</div>