@model IEnumerable<Pzpp.Data.Entities.Contact>
@{
    ViewData["Title"] = "Moje kontakty";
}

<div class="row mb-3">
  <div class="col-md-6">
    <input
      id="searchInput"
      type="text"
      class="form-control"
      placeholder="Szukaj kontaktÃ³w..."
    />
  </div>
  <div class="col-md-6 text-end">
    <a 
      class="btn btn-primary" 
      asp-controller="Contact" 
      asp-action="Create">
      <i class="bi bi-plus-lg"></i> Dodaj kontakt
    </a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped" id="contactsTable">
    <thead class="table-light">
      <tr>
        <th>ImiÄ™</th>
        <th>Nazwisko</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Ulubiony Tymbark</th>      <!-- nowa kolumna -->
        <th class="text-end">Akcje</th>
      </tr>
    </thead>
    <tbody>
    @foreach (var c in Model)
    {
      <tr>
        <td>@c.FirstName</td>
        <td>@c.LastName</td>
        <td>@c.Email</td>
        <td>@c.PhoneNumber</td>
        <td>@c.FavoriteTymbark</td>  <!-- wyÅ›wietlanie pola -->
        <td class="text-end">
          <a class="btn btn-sm btn-outline-info" 
             asp-controller="Contact" 
             asp-action="Details" 
             asp-route-id="@c.Id">ğŸ”</a>
          <a class="btn btn-sm btn-outline-warning" 
             asp-controller="Contact" 
             asp-action="Edit"    
             asp-route-id="@c.Id">âœï¸</a>
          <a class="btn btn-sm btn-outline-danger"  
             asp-controller="Contact" 
             asp-action="Delete"  
             asp-route-id="@c.Id">ğŸ—‘ï¸</a>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>

@section Scripts {
<script>
  // Prosta filtracja w tabeli po wpisanym tekÅ›cie
  $(function() {
    $("#searchInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#contactsTable tbody tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
      });
    });
  });
</script>
}
